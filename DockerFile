FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src

# Copiar el archivo de proyecto
COPY ["MaquillajeApi.csproj", "."]
RUN dotnet restore "MaquillajeApi.csproj"

# Copiar el resto del código
COPY . .
WORKDIR "/src"

# Publicar la aplicación
RUN dotnet publish "MaquillajeApi.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS final
WORKDIR /app
COPY --from=build /app/publish .

# Puerto para Railway
ENV ASPNETCORE_URLS=http://*:$PORT
ENV PORT=10000

EXPOSE 10000
ENTRYPOINT ["dotnet", "MaquillajeApi.dll"]